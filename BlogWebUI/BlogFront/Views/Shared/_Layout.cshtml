<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Kemal Yüksel</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/simplex.css" rel="stylesheet">
  <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css">

  <!-- Custom styles for this template -->
  <link href="/css/blog-home.css" rel="stylesheet">

</head>

<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" asp-action="Index" asp-controller="Home">Anasayfa</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
                 <form asp-action="Index" asp-controller="Home" method="GET">
            <div class="input-group" style="max-width: calc(100%) !important;">
              <input type="text" name="s" class="form-control" placeholder="Blog ara"
              style="width:255px ; max-width: calc(100%) !important;">
              @* <span class="input-group-btn">
                <button class="btn btn-light ml-2" type="submit">Ara</button>
              </span> *@
          </div>
          </form>
          </li>
        </ul>
      </div>


    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Blog Entries Column -->
      <div class="col-md-9">


        <!-- Blog Post -->
       <div class="my-4">
          @RenderBody()
       </div>
      </div>

      <!-- Sidebar Widgets Column -->
      <div class="col-md-3">
        <!-- Search Widget -->
         
      
        <!-- Categories Widget -->
        @await Component.InvokeAsync("CategoryList")


        <!-- Side Widget -->
        @await Component.InvokeAsync("LastFiveTopic")

      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <footer class="py-5" style="background-color: #353036">
    <div class="container">
      <p class="m-0 text-center text-white mb-3">&copy;2020 Kemal Yüksel</p>

      <p class="m-0 text-center text-white mb-3">
          <a class=" btn btn-dark btn-sm" rel="publisher" href="https://github.com/kemalyuksel" target="_blank">
                <i class="fab fa-github"></i>
            </a>
        <a class=" btn btn-default btn-sm text-white" style="background-color: #0077b5" rel="publisher" href="https://www.linkedin.com/in/kemal-y-18910716b/" target="_blank">
                <i class="fab fa-linkedin-in"></i>
            </a>
            <a class=" btn btn-dark btn-sm" rel="publisher" href="mailto:kemalyksell98@gmail.com" target="_blank">
                <i class="fas fa-envelope-square"></i>
            </a>
      </p>
      
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="/lib/jquery/jquery.min.js"></script>
  <script src="/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/lib/font-awesome/css/all.min.js"></script>

  @RenderSection("Script",false)

</body>

</html>
