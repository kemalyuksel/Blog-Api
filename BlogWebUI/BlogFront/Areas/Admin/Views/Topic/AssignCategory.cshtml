@model List<AssignCategoryModel>

<form action="AssignCategory" class="mx-auto my-3" method="POST">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">

            <input type="hidden" asp-for="@Model[i].CategoryName">
            <input type="hidden" asp-for="@Model[i].CategoryId">

        <input asp-for="@Model[i].Exist" type="checkbox" class="form-check-input">
        <label asp-for="@Model[i].Exist" class="form-check-label">@Model[i].CategoryName</label>
        </div>
    }

<button type="submit" class="btn btn-success btn-sm mt-2">Kaydet</button>

</form>